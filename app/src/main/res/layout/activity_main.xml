<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/btn_yuanjiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="圆角"/>

    <Button
        android:id="@+id/btn_yuanxing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="0dp"
        android:text="圆形" />

    <Button

        android:id="@+id/btn_bili"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="92dp"
        android:text="比例" />
    <Button
        android:id="@+id/btn_jianjin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_yuanjiao"
        android:text="渐进式"/>

    <Button
        android:id="@+id/btn_dong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_yuanjiao"
        android:layout_alignStart="@+id/btn_yuanxing"
        android:layout_marginTop="0dp"
        android:text="加载动图" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simple_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        fresco:placeholderImage="@mipmap/lt"
        android:layout_below="@id/btn_jianjin"
        />




</RelativeLayout>